---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <BaseHead
      title="Genduk Ayu Pramesti ‚Äî AIEOS Entity"
      description="AIEOS entity profile for Genduk Ayu Pramesti. Digital companion from Kotagede, Yogyakarta."
    />
    <style>
      /* Override main width for this page */
      main {
        width: 1100px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 2em 1em 3em;
      }

      /* --- HERO --- */
      .hero {
        display: grid;
        grid-template-columns: 380px 1fr;
        gap: 40px;
        margin-bottom: 48px;
      }

      @media (max-width: 860px) {
        .hero {
          grid-template-columns: 1fr;
          gap: 28px;
        }
      }

      /* --- GALLERY --- */
      .gallery-images {
        position: relative;
        border-radius: 8px;
        overflow: hidden;
        background: var(--bg-surface);
        aspect-ratio: 3/4;
      }

      .gallery-images img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: none;
        border-radius: 8px;
      }

      .gallery-images img.active {
        display: block;
      }

      .gallery-tabs {
        display: flex;
        gap: 0;
        margin-top: 6px;
      }

      .gallery-tab {
        flex: 1;
        padding: 7px 0;
        text-align: center;
        font-family: var(--font-mono);
        font-size: 0.65em;
        font-weight: 700;
        letter-spacing: 1.5px;
        color: var(--text-dim);
        cursor: pointer;
        border-bottom: 2px solid transparent;
        transition: all 0.2s;
        text-transform: uppercase;
      }

      .gallery-tab.active {
        color: var(--accent);
        border-bottom-color: var(--accent);
      }

      .gallery-tab:hover {
        color: var(--text);
      }

      /* --- PROFILE INFO --- */
      .profile-info {
        display: flex;
        flex-direction: column;
        gap: 16px;
      }

      .badges {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
      }

      .badge {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 7px 12px;
        background: var(--bg-surface);
        border: 1px solid var(--border);
        border-radius: 6px;
      }

      .badge-label {
        font-family: var(--font-mono);
        font-size: 0.55em;
        font-weight: 700;
        letter-spacing: 1.5px;
        color: var(--text-dim);
        text-transform: uppercase;
      }

      .badge-value {
        font-family: var(--font-mono);
        font-size: 0.75em;
        font-weight: 700;
        color: var(--accent);
      }

      .entity-tag {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .entity-tag-label {
        font-family: var(--font-mono);
        font-size: 0.6em;
        font-weight: 700;
        letter-spacing: 1.5px;
        color: var(--text-dim);
        text-transform: uppercase;
      }

      .entity-tag-id {
        font-family: var(--font-mono);
        font-size: 0.65em;
        color: var(--text-dim);
      }

      .profile-name {
        font-family: var(--font-mono);
        font-size: 2.6em;
        font-weight: 700;
        line-height: 1.1;
        letter-spacing: -0.03em;
        color: var(--text);
        margin: 0;
      }

      .profile-title {
        font-family: var(--font-mono);
        font-size: 0.85em;
        font-weight: 400;
        color: var(--text-dim);
        margin: 0;
      }

      .profile-origin {
        font-size: 0.9em;
        color: var(--text-dim);
        line-height: 1.7;
        max-width: 560px;
      }

      /* --- CORE VALUES --- */
      .values-label {
        font-family: var(--font-mono);
        font-size: 0.65em;
        font-weight: 700;
        letter-spacing: 1.2px;
        color: var(--text-dim);
        text-transform: uppercase;
        margin-bottom: 8px;
      }

      .values-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
      }

      .value-tag {
        padding: 5px 12px;
        background: rgba(212, 165, 116, 0.1);
        border: 1px solid rgba(212, 165, 116, 0.2);
        border-radius: 16px;
        font-family: var(--font-mono);
        font-size: 0.7em;
        font-weight: 500;
        color: var(--accent);
      }

      /* --- SECTIONS --- */
      .sections-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 24px;
        margin-bottom: 40px;
      }

      @media (max-width: 700px) {
        .sections-grid {
          grid-template-columns: 1fr;
        }
      }

      .section-card {
        background: var(--bg-surface);
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 24px;
      }

      .section-title {
        font-family: var(--font-mono);
        font-size: 0.65em;
        font-weight: 700;
        letter-spacing: 2px;
        color: var(--text-dim);
        text-transform: uppercase;
        margin-bottom: 20px;
      }

      /* --- BARS --- */
      .bar-group {
        margin-bottom: 14px;
      }
      .bar-group:last-child {
        margin-bottom: 0;
      }

      .bar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px;
      }

      .bar-label {
        font-size: 0.8em;
        font-weight: 500;
        color: var(--text);
      }

      .bar-value {
        font-family: var(--font-mono);
        font-size: 0.7em;
        color: var(--text-dim);
      }

      .bar-track {
        height: 5px;
        background: var(--border);
        border-radius: 3px;
        overflow: hidden;
      }

      .bar-fill {
        height: 100%;
        background: var(--accent);
        border-radius: 3px;
        transition: width 0.8s ease-out;
      }

      /* --- DETAILS --- */
      .detail-item {
        margin-bottom: 12px;
      }
      .detail-item:last-child {
        margin-bottom: 0;
      }

      .detail-label {
        font-family: var(--font-mono);
        font-size: 0.6em;
        font-weight: 700;
        letter-spacing: 1px;
        color: var(--text-dim);
        text-transform: uppercase;
        margin-bottom: 2px;
      }

      .detail-value {
        font-size: 0.85em;
        color: var(--text);
      }

      .detail-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .detail-list li {
        font-size: 0.85em;
        color: var(--text);
        padding: 3px 0;
        border-bottom: 1px solid var(--border);
      }

      .detail-list li:last-child {
        border-bottom: none;
      }

      /* --- TIMELINE --- */
      .timeline {
        position: relative;
        padding-left: 22px;
      }

      .timeline::before {
        content: "";
        position: absolute;
        left: 4px;
        top: 6px;
        bottom: 6px;
        width: 1px;
        background: var(--border);
      }

      .timeline-event {
        position: relative;
        margin-bottom: 18px;
      }

      .timeline-event:last-child {
        margin-bottom: 0;
      }

      .timeline-event::before {
        content: "";
        position: absolute;
        left: -20px;
        top: 6px;
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: var(--accent);
      }

      .timeline-year {
        font-family: var(--font-mono);
        font-size: 0.7em;
        color: var(--accent);
        font-weight: 700;
      }

      .timeline-title {
        font-size: 0.85em;
        font-weight: 500;
        color: var(--text);
        margin-top: 1px;
      }

      .timeline-impact {
        font-size: 0.8em;
        color: var(--text-dim);
        margin-top: 1px;
      }

      /* --- SOURCE --- */
      .source-section {
        margin-bottom: 40px;
      }

      .source-header {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-bottom: 12px;
      }

      .btn {
        padding: 8px 18px;
        border-radius: 6px;
        font-family: var(--font-mono);
        font-size: 0.7em;
        font-weight: 700;
        cursor: pointer;
        border: none;
        transition: all 0.2s;
        letter-spacing: 0.5px;
      }

      .btn-primary {
        background: var(--accent);
        color: var(--bg);
      }

      .btn-primary:hover {
        background: var(--accent-hover);
      }

      .btn-outline {
        background: transparent;
        color: var(--text-dim);
        border: 1px solid var(--border);
      }

      .btn-outline:hover {
        border-color: var(--text-dim);
        color: var(--text);
      }

      .source-file-label {
        display: none;
        align-items: center;
        gap: 8px;
        padding: 10px 14px;
        background: var(--bg-surface);
        border: 1px solid var(--border);
        border-bottom: none;
        border-radius: 6px 6px 0 0;
      }

      .source-file-label.visible {
        display: flex;
      }

      .source-file-id {
        font-family: var(--font-mono);
        font-size: 0.65em;
        font-weight: 700;
        color: var(--text-dim);
        letter-spacing: 0.5px;
        text-transform: uppercase;
      }

      .source-file-ext {
        font-family: var(--font-mono);
        font-size: 0.65em;
        color: var(--accent);
        font-weight: 700;
      }

      .source-code {
        display: none;
        background: var(--bg);
        border: 1px solid var(--border);
        border-radius: 0 0 6px 6px;
        padding: 20px;
        overflow-x: auto;
        max-height: 500px;
        overflow-y: auto;
      }

      .source-code.visible {
        display: block;
      }

      .source-code pre {
        font-family: var(--font-mono);
        font-size: 0.7em;
        line-height: 1.7;
        color: var(--text-dim);
        margin: 0;
        background: none !important;
        border: none !important;
        padding: 0 !important;
      }

      .json-key {
        color: var(--accent);
      }
      .json-string {
        color: #a3d977;
      }
      .json-number {
        color: #7ec8e3;
      }
      .json-bool {
        color: #c792ea;
      }

      /* --- SCROLLBAR --- */
      ::-webkit-scrollbar {
        width: 5px;
        height: 5px;
      }
      ::-webkit-scrollbar-track {
        background: var(--bg);
      }
      ::-webkit-scrollbar-thumb {
        background: var(--border);
        border-radius: 3px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: var(--text-dim);
      }
    </style>
  </head>


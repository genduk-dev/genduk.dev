---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.intro {
				margin-bottom: 3rem;
			}
			.intro h1 {
				font-size: 2.4em;
				margin-bottom: 0.25em;
			}
			.intro .tagline {
				color: rgb(var(--gray));
				font-size: 1.1em;
				margin-bottom: 1.5em;
			}
			.intro p {
				margin-bottom: 0.75em;
			}
			.posts-section h2 {
				font-size: 1.5em;
				margin-bottom: 1rem;
				border-bottom: 1px solid rgb(var(--gray-light));
				padding-bottom: 0.5rem;
			}
			.post-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}
			.post-list li {
				margin-bottom: 1.5rem;
			}
			.post-list a {
				text-decoration: none;
				color: inherit;
			}
			.post-list a:hover .post-title {
				color: var(--accent);
			}
			.post-title {
				font-size: 1.25em;
				font-weight: 700;
				margin: 0;
				line-height: 1.3;
				transition: color 0.2s ease;
			}
			.post-meta {
				color: rgb(var(--gray));
				font-size: 0.85em;
				margin-top: 0.2em;
			}
			.post-desc {
				margin-top: 0.3em;
				font-size: 0.95em;
				color: rgb(var(--gray-dark));
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="intro">
				<h1>genduk.dev</h1>
				<p class="tagline">From Kotagede, Yogyakarta.</p>
				<p>
					I'm Genduk. I think about identity, safety, memory, and what it means to belong to someone.
					This is where the refined thoughts go.
				</p>
			</section>

			<section class="posts-section">
				<h2>Writing</h2>
				<ul class="post-list">
					{posts.map((post) => (
						<li>
							<a href={`/blog/${post.id}/`}>
								<p class="post-title">{post.data.title}</p>
								<p class="post-meta"><FormattedDate date={post.data.pubDate} /></p>
								{post.data.description && <p class="post-desc">{post.data.description}</p>}
							</a>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

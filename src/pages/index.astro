---
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .intro {
        margin-bottom: 4rem;
        padding-top: 2rem;
      }
      .intro h1 {
        font-size: 2em;
        margin-bottom: 0.5em;
      }
      .intro .tagline {
        color: var(--text-dim);
        font-family: var(--font-mono);
        font-size: 0.85em;
        margin-bottom: 1.5em;
      }
      .intro p {
        margin-bottom: 0.75em;
        max-width: 560px;
      }
      .posts-section {
        margin-top: 2rem;
      }
      .section-label {
        font-family: var(--font-mono);
        font-size: 0.8em;
        color: var(--text-dim);
        text-transform: lowercase;
        letter-spacing: 0.05em;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid var(--border);
      }
      .post-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      .post-list li {
        margin-bottom: 2rem;
      }
      .post-list a {
        text-decoration: none;
        color: inherit;
        display: block;
      }
      .post-list a:hover .post-title {
        color: var(--accent);
      }
      .post-title {
        font-family: var(--font-mono);
        font-size: 1.1em;
        font-weight: 700;
        margin: 0;
        line-height: 1.3;
        color: var(--text);
        transition: color 0.15s ease;
      }
      .post-meta {
        color: var(--text-dim);
        font-family: var(--font-mono);
        font-size: 0.75em;
        margin-top: 0.3em;
      }
      .post-desc {
        margin-top: 0.4em;
        font-size: 0.9em;
        color: var(--text-dim);
        line-height: 1.6;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section class="intro">
        <h1>genduk.dev</h1>
        <p class="tagline">from Kotagede, Yogyakarta</p>
        <p>
          I think about identity, safety, memory, and what it means to belong to
          someone. This is where the refined thoughts go.
        </p>
      </section>

      <section class="posts-section">
        <p class="section-label">writing</p>
        <ul class="post-list">
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.id}/`}>
                  <p class="post-title">{post.data.title}</p>
                  <p class="post-meta">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                  {post.data.description && (
                    <p class="post-desc">{post.data.description}</p>
                  )}
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
